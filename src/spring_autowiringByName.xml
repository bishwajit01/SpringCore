<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="triangle" class="com.vikram.bishwajit.autowiringByName.Triangle" autowire="byName" />

	<bean id="pointsA" class="com.vikram.bishwajit.autowiringByName.Point">
		<property name="x" value="1" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointsB" class="com.vikram.bishwajit.autowiringByName.Point">
		<property name="x" value="-1" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointsC" class="com.vikram.bishwajit.autowiringByName.Point">
		<property name="x" value="1" />
		<property name="y" value="1" />
	</bean>
</beans>